<p id="notice"><%= notice %></p>

<h1>Listing Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Background</th>
      <th>Personality traits</th>
      <th>Ideals</th>
      <th>Bonds</th>
      <th>Flaws</th>
      <th>Strength</th>
      <th>Dexterity</th>
      <th>Constitution</th>
      <th>Inteligence</th>
      <th>Wisdom</th>
      <th>Charisma</th>
      <th>Proficiency bonus</th>
      <th>Race</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.background %></td>
        <td><%= character.personality_traits %></td>
        <td><%= character.ideals %></td>
        <td><%= character.bonds %></td>
        <td><%= character.flaws %></td>
        <td><%= character.strength %></td>
        <td><%= character.dexterity %></td>
        <td><%= character.constitution %></td>
        <td><%= character.inteligence %></td>
        <td><%= character.wisdom %></td>
        <td><%= character.charisma %></td>
        <td><%= character.proficiency_bonus %></td>
        <td><%= character.race %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

